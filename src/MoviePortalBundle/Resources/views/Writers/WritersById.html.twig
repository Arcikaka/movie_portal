{% extends '@MoviePortal/base.html.twig' %}
{% block content %}
<div>
    <h3>{{ writer.name }} {{ writer.surname }}</h3>
</div>
<div>
    Movies:
    {% for movie in writer.movies %}
    <a href="{{ path('movie_by_id', {'id' : movie.id}) }}">{{ movie.title }}</a>
    {% endfor %}
</div>
{% endblock %}